<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.froze.medialibraryex01.MainActivity"
    android:background="#ffc2c2">


    <fragment
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:name="com.example.froze.medialibraryex01.ListFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_list" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.froze.medialibraryex01.PagerFragment"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fragment"
        android:layout_toEndOf="@+id/fragment"
        android:id="@+id/fragment2" />

</RelativeLayout>
